                 PreviewTextInput="ParcelTextBox_PreviewTextInput" 
                 HorizontalContentAlignment="Left" 
                 VerticalContentAlignment="Top"
                 IsReadOnly="{Binding Path=IsVisible, ElementName=senderOfParcel}"
                 Text="{Binding Path=SenderOfParcel,UpdateSourceTrigger=PropertyChanged,
                Mode=OneWay}"  HorizontalScrollBarVisibility="Visible" Grid.ColumnSpan="2"/>-->

            <!--<TextBox x:Name="TargetToParcel" Grid.Row="0" 
                 HorizontalAlignment="Left" Height="31" Margin="241,173,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="133"
                 PreviewTextInput="ParcelTextBox_PreviewTextInput" 
                 HorizontalContentAlignment="Left" 
                 VerticalContentAlignment="Top"
                 IsReadOnly="{Binding Path=IsVisible, ElementName=SenderOfParcel}"
                 Text="{Binding Path=TargetToParcel,UpdateSourceTrigger=PropertyChanged,
                 Mode=OneWay}"   
                 Visibility="{Binding Path=IsVisible, ElementName=SenderOfParcel,
                Converter={StaticResource BooleanToVisibilityConverter}}" HorizontalScrollBarVisibility="Visible" Grid.ColumnSpan="2" Grid.RowSpan="2"/>-->
            <!--<TextBox x:Name="target_ID" Grid.Row="0" Grid.Column="1" 
                 HorizontalAlignment="Left" Height="31" Margin="0,65,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="133" MaxLength="9" 
                 PreviewTextInput="ParcelTextBox_PreviewTextInput" 
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                 Visibility="{Binding Path=IsVisible, ElementName=SenderOfParcel,
                Converter={StaticResource notBooleanToVisibilityConverter}}"/>-->





            <!--<TextBox x:Name="drone_Id"
                     Text="{Binding Path=DroneInParcel ,UpdateSourceTrigger=PropertyChanged, 
                Mode=OneWay}" TextWrapping="Wrap"
                     HorizontalAlignment="Left" Height="31" Margin="241,93,0,0" 
                     VerticalAlignment="Top" Width="300" HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Top"
                     Visibility="{Binding Path=IsVisible, ElementName=SenderOfParcel,
                     Converter={StaticResource BooleanToVisibilityConverter}}"
                     IsReadOnly="{Binding Path=IsVisible, ElementName=SenderOfParcel}" Grid.ColumnSpan="2"/>-->



            <Button x:Name="SaveClick" 
                    Visibility="{Binding Path=IsVisible, ElementName=senderParcel, 
                    Converter={StaticResource notBooleanToVisibilityConverter} }"
                    Content="Save Parcel"
                    VerticalAlignment="Top" Click="SaveParcelButton_Click" Margin="174,148,10,0" Grid.Column="1" Height="32" />
            <Button x:Name="CollectionParcelClick" 
                    Visibility="{Binding Path=IsVisible, ElementName=SaveClick,
                    Converter={StaticResource notBooleanToVisibilityConverter}}"
                    Grid.Column="1" Content="Collection" VerticalAlignment="Top"
                    Click="UpdateColectionParcelButton_Click" Margin="193,566,28,0" Height="42" />
            <Button Content="Close" Grid.Column="1" VerticalAlignment="Center" 
                    Click="CloseButton_Click" Margin="237,0,0,0" Height="32" />
        </Grid>
    </Grid>

</Window>
